@namespace DAdmin
@inherits DAdminComponent

@using DAdmin
@using DAdmin.Charts.ViewModels
@using DAdmin.Menus.ViewModels
@using DAdmin.Extensions
@using DAdmin.Helpers
@using DAdmin.Services
@using DAdmin.States
@using Microsoft.AspNetCore.Components
@using Microsoft.EntityFrameworkCore

@if (_stateInitialized)
{
    <CascadingValue Value="this">
        @ChildContent
    </CascadingValue>

    <div class="container-fluid page-body-wrapper">
        @if (MenuState.MenuItems != null)
        {
            <Menu OnSelectedItem="OnSelectedItem" MenuItems="@MenuState.MenuItems"/>
        }

        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-md-12 stretch-card">
                        <div class="content p-2">
                            @_renderedContent
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}