<nav class="sidebar">
    <div class="pt-4">

        <a class="sidebar-item text-white"><i class="fa fa-dashboard mr-1"></i> Dashboard </a>
        <ul class="list-unstyled components mb-2">
            <li>
                <a href="#">Charts</a>
            </li>
        </ul>

        <a class="sidebar-item text-white"><i class="fa fa-table mr-1"></i> Tables </a>
        <ul class="list-unstyled components mb-5">
            @if (tableNames == null)
            {
                <p class="text-dark">Loading...</p>
            }
            else
            {
                foreach (var tableName in tableNames)
                {
                    var isSelected = tableName == selectedTableName;
                    <li class="@(isSelected ? "active" : "")">
                        <a href="#"
                           @onclick="() => SelectTable(tableName)">
                            @tableName
                        </a>
                    </li>
                }
            }
        </ul>
    </div>
</nav>